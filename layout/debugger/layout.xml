<root>
	<styles>		
		<include src="file://{resources}/styles/debugger.sass" />
	</styles>

	<snippets>
		<snippet name="PanelStart">
			<Panel class="DebugLabelPanelRow" acceptsfocus="true">
				<Panel id="Indent">
					<ToggleButton allowrawtext="true" id="DebugLabelToggle" selected="true" />					
				</Panel>
				<Label allowrawtext="true" id="DebugLayoutPanelOpen" acceptsfocus="true" />
				<Label allowrawtext="true" id="StyleLink" class="StyleLink" />
			</Panel>
		</snippet>

		<snippet name="PanelClose">
			<Panel class="DebugLabelPanelRow" acceptsfocus="true">
				<Panel id="Indent" />
				<Label allowrawtext="true" id="DebugLayoutPanelClose" />
			</Panel>
		</snippet>
	</snippets>
	
	<DebugLayout>
		<!-- Filled out with a list of the snippets above -->
	</DebugLayout>	
</root>
