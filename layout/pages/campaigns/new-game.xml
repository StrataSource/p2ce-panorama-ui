<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-chapters.ts" />
	</scripts>

	<snippets>
		<snippet name="ChapterEntrySnippet">
			<Button group="ChaptersGroupRadio" class="chapters__entry">
				<Panel class="chapters__entry__inner">
					<!-- Chapter icon cover -->
					<Image
						id="ChapterCover"
						class="chapters__entry__cover"
						defaultsrc="file://{images}/menu/p2ce-generic.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>

					<!-- Chapter info; title, description, 'source' -->
					<Panel class="chapters__entry__details">
						<Label id="ChapterTitle" class="chapters__entry__details__title" text="#MainMenu_Campaigns_MM_ChapterNum" />
						<Label id="ChapterDesc" class="chapters__entry__details__desc" text="#MainMenu_Campaigns_MM_ChapterDesc" />
					</Panel>
				</Panel>
			</Button>
		</snippet>
	</snippets>

	<Panel class="mainmenu__page" onload="CampaignChapters.populateChapters()">
		<Panel id="CampaignChapters" class="selected-campaign__lister">
		</Panel>
		<Panel id="CampaignStarterPanel" class="selected-campaign__action-bar hide" disabled="true">
			<Button
				id="CampaignCustomizeBtn"
				class="button-mono button-mono__bigger fill-width mr-2"
				onactivate="CampaignChapters.customizeChapter()"
			>
				<Label class="button-mono__text" text="#MainMenu_Campaigns_MM_StartCustom" />
			</Button>
			<Button
				id="CampaignCleanStartBtn"
				class="button-mono button-mono__bigger fill-width"
				onactivate="CampaignChapters.startChapter()"
			>
				<Label class="button-mono__text" text="#MainMenu_Campaigns_MM_StartVanilla" />
			</Button>
		</Panel>
	</Panel>
</root>
