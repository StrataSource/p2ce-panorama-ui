<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-saves.ts" />
	</scripts>

	<snippets>
		<snippet name="SaveEntrySnippet">
			<Panel class="saves__container" tabindex="auto" selectionpos="auto">
				<Image
					id="SaveBg"
					class="saves__entry__bg"
					src="file://{images}/menu/p2ce-generic.png"
					scaling="stretch-to-cover-preserve-aspect"
					textureheight="1920"
					texturewidth="1080"
				/>
				<Panel id="SaveAction" group="SaveGroupRadio" class="saves__entry" tabindex="auto" selectionpos="auto">
					<Panel class="saves__entry__inner">
						<!-- Save icon cover -->
						<Panel class="saves__entry__cover__container">
							<Image
								id="SaveCover"
								class="saves__entry__cover"
								src="file://{images}/menu/p2ce-generic.png"
								scaling="stretch-to-cover-preserve-aspect"
								textureheight="1920"
								texturewidth="1080"
							/>
							<Image
								id="SaveCloud"
								class="saves__entry__cloud"
								src="file://{images}/cloud.svg"
								scaling="stretch-to-fit-preserve-aspect"
								textureheight="32"
								texturewidth="32"
							/>
						</Panel>
						<!-- Save info; title, description, 'source' -->
						<Panel class="saves__entry__details">
							<Label id="SaveType" class="saves__entry__details__type" text="#MainMenu_SaveRestore_SaveType_autosave" />
							<Label id="SaveTitle" class="saves__entry__details__title" text="[PH] Save Title" />
							<Label id="SaveDesc" class="saves__entry__details__desc" text="[PH] Save Description" />
						</Panel>
					</Panel>
					<Panel id="SaveControls" class="saves__entry__controls" tabindex="auto" selectionpos="auto">
						<Button id="SaveLoad" class="button" tabindex="auto" selectionpos="auto">
							<Image
								class="button__icon"
								src="file://{images}/play.svg"
								scaling="stretch-to-fit-preserve-aspect"
								texturewidth="48"
								textureheight="48"
							/>
						</Button>
						<Button id="SaveOverwrite" class="button" tabindex="auto" selectionpos="auto">
							<Image
								class="button__icon"
								src="file://{images}/download.svg"
								scaling="stretch-to-fit-preserve-aspect"
								texturewidth="48"
								textureheight="48"
							/>
						</Button>
						<Button id="SaveDelete" class="button button--red" tabindex="auto" selectionpos="auto">
							<Image
								class="button__icon"
								src="file://{images}/delete.svg"
								scaling="stretch-to-fit-preserve-aspect"
								texturewidth="48"
								textureheight="48"
							/>
						</Button>
					</Panel>
				</Panel>
			</Panel>
		</snippet>
		<snippet name="CreateSaveSnippet">
			<Panel class="saves__container" tabindex="auto" selectionpos="auto">
				<Button id="SaveAction" class="saves__entry" tabindex="auto" selectionpos="auto">
					<Panel class="saves__entry__inner saves__entry__lined">
						<!-- Save info; title, description, 'source' -->
						<Panel class="saves__entry__details">
							<Label id="SaveTitle" class="saves__entry__details__title" text="#MainMenu_SaveRestore_CreateSave" />
						</Panel>
					</Panel>
				</Button>
			</Panel>
		</snippet>
	</snippets>

	<Panel class="mainmenu__page" onload="CampaignSaves.init()" tabindex="auto" selectionpos="auto">
		<Panel id="CampaignSaveCreateSticky" class="selected-campaign__sticky" tabindex="auto" selectionpos="auto">
		</Panel>
		<Panel id="CampaignSaves" class="selected-campaign__lister" tabindex="auto" selectionpos="auto" />
	</Panel>
</root>
