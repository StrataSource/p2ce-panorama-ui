<!--
	Purpose: hard-coded layout file for <Console />
	Having a ConsoleMessageTarget StaticConsoleMessageTarget and ConsoleInput ConsoleInput is mandatory,
	while the resizing panels are NOT

	For performance's sake, most stuff is done in code and customization is limited, see con_ cvars.
-->
<root>
	<styles>
		<include src="file://{resources}/styles/pages/console.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/console.js" />
	</scripts>

	<Panel hittest="true" defaultfocus="ConsoleInput">
		<!-- Header -->
		<Panel class="header" id="MoveDragArea" draggable="true">
			<Label text="Console" />
			<Button id="ConsoleClose" onactivate="Console.toggle()" class="button">
				<Image src="file://{images}/add.svg" textureheight="12" />
			</Button>
		</Panel>

		<!-- Console text -->
		<StaticConsoleMessageTarget id="ConsoleMessageTarget" />

		<!-- Footer -->
		<Panel class="footer" id="ConsoleFooter">
			<ConsoleInput id="ConsoleInput" clearaftersubmit="true" />
			<ResizeDragKnob target="Console" class="button">
				<Image src="file://{images}/resize.svg" textureheight="12" />
			</ResizeDragKnob>
		</Panel>
	</Panel>
</root>
