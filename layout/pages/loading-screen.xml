<root>
	<styles>
		<include src="file://{resources}/styles/pages/loading-screen.scss" />
	</styles>

	<Panel class="loadingscreen">
		<Panel id="container" class="fill">
			<Panel class="bottom row vertical">
				<Panel class="row horizontal" id="details">
					<Label id="ProgressStatusText" text="#LoadingScreen_Loading" />
					<Label id="PercentText" class="right" text="{d:percent}%" />
				</Panel>
				<ProgressBar class="row" id="ProgressBar" />
			</Panel>
		</Panel>
	</Panel>

</root>
