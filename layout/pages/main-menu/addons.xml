<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/game-ui.js" />
		<include src="file://{scripts}/pages/main-menu/addons.js" />
	</scripts>

	<snippets>
		<snippet name="AddonEntrySnippet">
			<Button class="addons__item">
				<Image id="AddonCover" class="addons__cover"
					textureheight="128"
					texturewidth="128"
				/>
				<Panel class="addons__title">
					<Label id="AddonTitle" class="addons__title"/>
					<Label id="AddonDesc" class="addons__desc"/>
					<Panel id="AddonButtons" class="flow-right">
						<Button id="AddonEnable" class="addons__buttons">
							<Label text="Enable" id="AddonEnableText"/>
						</Button>
						<Button id="AddonSubscribe" class="addons__buttons">
							<Label text="Subscribe" id="AddonSubscribeText"/>
						</Button>
					</Panel>
					<Label id="AddonSource" class="addons__source"/>
				</Panel>
			</Button>
		</snippet>
	</snippets>

	<Panel class="mainmenu__page flow-right" onload="AddonManager.init()">
		<Panel class="addons__side_panel">
			<Panel id="AddonContainer" class="addons__container"/>
			<Panel class="addons__buttons_container">
				<Button onactivate="AddonManager.enableAll()">
					<Label text="Enable All"/>
				</Button>
				<Button onactivate="AddonManager.disableAll()">
					<Label text="Disable All"/>
				</Button>
				<Button onactivate="AddonManager.reloadAddonList()">
					<Label text="Reload Addon List"/>
				</Button>
			</Panel>
		</Panel>

		<Panel id="AddonPanel" class="addonpanel__container">
			<Label id="AddonTitle" class="addonpanel__title" text="Addon Name"/>
			<Label id="AddonAuthors" class="addonpanel__authors" />
			<Panel class="addonpanel__desc-container">
				<Label class="addonpanel__section-name" text="Description" />
				<Label id="AddonDesc" class="addonpanel__description" text="My Addon Description" />
			</Panel>
		</Panel>
	</Panel>
</root>
