<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/main-menu/campaigns.ts" />
	</scripts>

	<Panel class="mainmenu__page flow-right" onload="CampaignSelector.init()">
		<Panel class="campaigns">
			<Panel class="campaigns__action-bar">
					<Button id="ReloadAll" class="button mr-2">
						<Image class="button__icon" texturewidth="32" textureheight="32" src="file://{images}/refresh.svg" />
					</Button>
					<ToggleButton id="ToggleAll" class="button togglebutton">
						<Image class="button__icon" texturewidth="32" textureheight="32" src="file://{images}/checkmark.svg" />
					</ToggleButton>

				<Panel class="horizontal-align-right flow-right">
					<Button id="ApplyButton" class="button mr-2" disabled="true">
						<Label class="button__text" text="[HC] Apply" />
					</Button>
					<Button id="CancelButton" class="button" disabled="true">
						<Label class="button__text" text="[HC] Discard" />
					</Button>
				</Panel>
			</Panel>

			<!-- Campaign list -->
			<Panel id="CampaignContainer" class="campaigns__list" />
		</Panel>

		<Panel id="SelectedCampaignPanel" class="selected-campaign">
			<Panel class="flow-right">
				<Image id="SelectedCampaignCover" class="selected-campaign__cover" textureheight="128" texturewidth="128" />
				<Panel class="flow-down vertical-align-center">
					<Label id="SelectedCampaignTitle" class="selected-campaign__title" text="[PH] Campaign Name" />
					<Label id="SelectedCampaignAuthors" class="selected-campaign__authors" text="[PH] Campaign Authors" />
					<Button id="SelectedCampaignView" class="mt-2 button">
						<Label class="button__text" text="[HC] View On Steam" />
					</Button>
				</Panel>
			</Panel>
			<Panel class="selected-campaign__description">
				<Label
					id="SelectedCampaignDesc"
					class="selected-campaign__description__text"
					text="[PH] Campaign Description"
					html="true"
					loadimages="true"
				/>
			</Panel>
		</Panel>
	</Panel>
</root>
