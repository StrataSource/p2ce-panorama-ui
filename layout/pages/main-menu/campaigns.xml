<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/campaigns/manager.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-selector.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-home.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-chapters.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-saves.ts" />
		<include src="file://{scripts}/pages/campaigns/campaign-settings.ts" />
		<include src="file://{resources}/scripts/pages/campaigns/shared.ts" />
	</scripts>

	<snippets>
		<!-- Campaign Entry -->
		<snippet name="CampaignEntrySnippet">
			<Button class="campaigns__entry">
				<!--  -->
				<Image
					id="CampaignBtnBg"
					class="campaigns__entry__bg-image"
					src="file://{images}/menu/portal2/campaign_cover.png"
					scaling="stretch-to-cover-preserve-aspect"
					textureheight="1920"
					texturewidth="1080"
				/>
				<Panel class="campaigns__entry__inner">
					<!-- Campaign icon cover -->
					<Panel class="vertical-align-center">
						<Image
							id="CampaignCover"
							class="campaigns__entry__cover"
							src="file://{images}/menu/portal2/campaign_cover.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<Image
							id="CampaignLogo"
							class="campaigns__entry__details__logo"
							src="file://{images}/menu/portal2/logo.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="128"
							texturewidth="128"
						/>
						<Image
							id="CampaignStatus"
							class="campaigns__entry__details__status"
							src="file://{images}/crown.svg"
							scaling="stretch-to-fit-preserve-aspect"
							textureheight="128"
							texturewidth="128"
						/>
					</Panel>
					<!-- Campaign info; title, description, 'source' -->
					<Panel class="campaigns__entry__details">
						<Label
							id="CampaignTitle"
							class="campaigns__entry__details__title"
							text="#MainMenu_Campaigns_MM_CampaignName_placeholder"
						/>
						<Label id="CampaignAuthor" class="campaigns__entry__details__author" text="#MainMenu_Campaigns_MM_CampaignAuthor" />
						<Label
							id="CampaignDesc"
							class="campaigns__entry__details__desc"
							text="#MainMenu_Campaigns_MM_CampaignDescription_placeholder"
						/>
					</Panel>
				</Panel>
			</Button>
		</snippet>
		<!-- / Campaign Entry -->

		<!-- Save Entry -->
		<snippet name="SaveEntrySnippet">
			<Panel class="saves__container">
				<Button id="SaveAction" class="saves__entry">
					<Panel class="saves__entry__inner">
						<!-- Save icon cover -->
						<Image
							id="SaveCover"
							class="saves__entry__cover"
							src="file://{materials}/vgui/no_save_game.vtf"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<!-- Save info; title, description, 'source' -->
						<Panel class="saves__entry__details">
							<Label id="SaveTitle" class="saves__entry__details__title" text="[PH] Save Title" />
							<Label id="SaveDesc" class="saves__entry__details__desc" text="[PH] Save Description" />
						</Panel>
					</Panel>
				</Button>
				<Button id="SaveDelete" class="saves__entry__delete button button--red">
					<Image
						class="button__icon"
						src="file://{images}/delete.svg"
						scaling="stretch-to-fit-preserve-aspect"
						texturewidth="48"
						textureheight="48"
					/>
				</Button>
			</Panel>
		</snippet>
		<!-- / Save Entry -->

		<!-- Chapter Entry -->
		<snippet name="ChapterEntrySnippet">
			<RadioButton group="ChaptersGroupRadio" class="chapters__entry">
				<Panel class="chapters__entry__inner">
					<!-- Chapter icon cover -->
					<Image
						id="ChapterCover"
						class="chapters__entry__cover"
						src="file://{images}/menu/p2ce/news-splash.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>

					<!-- Chapter info; title, description, 'source' -->
					<Panel class="chapters__entry__details">
						<Label id="ChapterTitle" class="chapters__entry__details__title" text="#MainMenu_Campaigns_MM_ChapterNum" />
						<Label id="ChapterDesc" class="chapters__entry__details__desc" text="#MainMenu_Campaigns_MM_ChapterDesc" />
					</Panel>
				</Panel>
			</RadioButton>
		</snippet>
		<!-- / Chapter Entry -->
	</snippets>

	<Panel class="mainmenu__page no-flow" onload="CampaignMgr.init()">
		<!-- CAMPAIGN SELECTOR -->
		<Panel id="CampaignSelector" class="campaigns">
			<Panel class="campaigns__left">
				<Panel class="campaigns__action-bar">
					<Button
						id="CampaignsViewLooseMapsBtn"
						class="button-mono button-mono__bigger fill-width mr-1"
						onactivate="CampaignSelector.viewLooseMaps()"
					>
						<Image
							class="button-mono__icon"
							src="file://{images}/cancel.svg"
							scaling="stretch-to-fit-preserve-aspect"
							texturewidth="32"
							textureheight="32"
						/>
						<Panel class="button-mono__text-panel">
							<Label class="button-mono__text-panel__header" text="#MainMenu_Campaigns_MapList" />
							<Label class="button-mono__text-panel__subheader" text="#MainMenu_Campaigns_MapList_Tagline_NewlySubbed" />
						</Panel>
					</Button>
					<Button
						id="CampaignsGoWorkshopBtn"
						class="button-mono button-mono__bigger fill-width ml-1"
						onactivate="CampaignSelector.openWorkshop()"
					>
						<Image
							class="button-mono__icon"
							src="file://{images}/icons/steam.svg"
							scaling="stretch-to-fit-preserve-aspect"
							texturewidth="32"
							textureheight="32"
						/>
						<Panel class="button-mono__text-panel">
							<Label class="button-mono__text-panel__header" text="#MainMenu_Campaigns_OpenWS" />
							<Label class="button-mono__text-panel__subheader" text="#MainMenu_Campaigns_OpenWS_Tagline" />
						</Panel>
					</Button>
				</Panel>
				<Panel disabled="true" class="campaigns__action-bar">
					<TextEntry
						class="textentry campaigns__action-bar__textentry fill-width mr-2"
						placeholder="#MainMenu_Campaigns_Search_FillerText"
					/>
					<DropDown id="CampaignSortMode" class="dropdown" menuclass="dropdown-menu">
						<!-- <Panel class="DropDownIcon"/> -->
						<Label text="#MainMenu_Campaigns_Search_SortBy_NewSubs" id="CampaignSortMode1" value="1" />
						<Label text="#MainMenu_Campaigns_Search_SortBy_AtoZ" id="CampaignSortMode2" value="2" />
						<Label text="#MainMenu_Campaigns_Search_SortBy_ZtoA" id="CampaignSortMode2" value="3" />
						<Label text="#MainMenu_Campaigns_Search_SortBy_Last" id="CampaignSortMode3" value="4" />
						<Label text="#MainMenu_Campaigns_Search_SortBy_Completion" id="CampaignSortMode4" value="5" />
						<Label text="#MainMenu_Campaigns_Search_SortBy_CampaignSrc" id="CampaignSortMode5" value="6" />
					</DropDown>
				</Panel>
				<!-- Campaign list -->
				<Panel id="CampaignContainer" class="campaigns__list" onmouseout="CampaignSelector.hideBoxart()" />
			</Panel>
			<Panel class="campaigns__right">
				<Panel id="HoveredCampaignContainer" class="campaigns__boxart__container">
					<Panel id="HoveredCampaignBorder" class="campaigns__boxart__border">
						<Panel id="HoveredCampaignInfo" class="campaigns__boxart__bg">
							<Panel class="campaigns__boxart__top">
								<Image
									id="HoveredCampaignBoxart"
									class="campaigns__boxart__image"
									src="file://{images}/menu/portal2/boxart.png"
									scaling="stretch-to-fit-preserve-aspect"
									texturewidth="600"
									textureheight="900"
								/>
								<Image
									id="HoveredCampaignStatusImage"
									class="campaigns__boxart__status"
									src="file://{images}/crown.svg"
									scaling="stretch-to-fit-preserve-aspect"
									textureheight="128"
									texturewidth="128"
								/>
							</Panel>
							<Panel class="campaigns__boxart__bottom">
								<Label class="campaigns__boxart__detail__text" text="#MainMenu_Campaigns_DetailCard_CompletionPercentage" />
								<Label class="campaigns__boxart__text" text="#MainMenu_Campaigns_DetailCard_CompletationStat1" />
								<Label class="campaigns__boxart__text" text="#MainMenu_Campaigns_DetailCard_CompletationStat1_CName" />
								<Label class="campaigns__boxart__text" text="#MainMenu_Campaigns_DetailCard_CompletationStat2" />

								<Label class="campaigns__boxart__text__small mt-2" text="#MainMenu_Campaigns_DetailCard_LastPlayDate" />
								<Label class="campaigns__boxart__text__small" text="#MainMenu_Campaigns_DetailCard_InstallDate" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</Panel>
		<!-- / CAMPAIGN SELECTOR -->

		<!-- CAMPAIGN HOME -->
		<Panel id="CampaignStartPage" class="selected-campaign">
			<Image
				id="CampaignBackground"
				class="selected-campaign__background"
				src="file://{images}/menu/portal2/campaign_bg.png"
				scaling="stretch-to-cover-preserve-aspect"
				textureheight="1920"
				texturewidth="1080"
			/>
			<Button class="full-width full-height" />
			<Panel class="selected-campaign__container">
				<!-- MAIN CONTROLS -->
				<Panel class="selected-campaign__controls">
					<Image
						id="CampaignLogo"
						class="selected-campaign__logo"
						src="file://{images}/menu/portal2/full_logo.png"
						scaling="stretch-to-fit-preserve-aspect"
					/>
					<Label id="CampaignNamePlaceholder" />
					<Panel id="CampaignControls" class="selected-campaign__controls__inner">
						<Button
							id="CampaignNewGameBtn"
							class="selected-campaign__controls__button selected-campaign__controls__button__lined"
							onactivate="CampaignChaptersTab.setActive()"
						>
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Campaigns_MM_NewGame" />
						</Button>
						<Button
							id="CampaignLoadLatestBtn"
							class="selected-campaign__controls__button selected-campaign__controls__button__lined"
							onactivate="CampaignSavesTab.loadLatest()"
						>
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Campaigns_MM_LoadAuto" />
						</Button>
						<Button
							id="CampaignSaveBtn"
							class="selected-campaign__controls__button selected-campaign__controls__button__lined"
							onactivate="CampaignSavesTab.setSaveActive()"
						>
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Campaigns_MM_SaveGame" />
						</Button>
						<Button
							id="CampaignAllSavesBtn"
							class="selected-campaign__controls__button selected-campaign__controls__button__lined"
							onactivate="CampaignSavesTab.setLoadActive()"
						>
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Campaigns_MM_LoadGame" />
						</Button>
						<!-- Just hide this for now
						<Button class="selected-campaign__controls__button selected-campaign__controls__button__lined" disabled="true">
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Addons_ViewOnWS" />
						</Button>
						-->
						<Button
							id="CampaignStartReturn"
							class="selected-campaign__controls__button"
							onactivate="CampaignHome.hide()"
						>
							<Label class="selected-campaign__controls__button__text" text="#MainMenu_Campaigns_MM_ReturnToCampaignMenu" />
						</Button>
					</Panel>
				</Panel>
				<!-- / MAIN CONTROLS -->

				<!-- LISTER FOR CHAPTERS / SAVES -->
				<Panel id="CampaignListerContainer" class="selected-campaign__lister__container">
					<Label id="CampaignListerModeLabel" class="selected-campaign__lister__header" text="[PH] Lister Mode" />
					<Panel class="selected-campaign__lister__body">
						<Panel id="CampaignLister" class="selected-campaign__lister">
						</Panel>
						<Panel id="CampaignStarterPanel" class="full-width flow-right">
							<Button id="CampaignCustomizeBtn" class="selected-campaign__lister__button" onactivate="CampaignChaptersTab.customizeChapter()">
								<Label class="selected-campaign__lister__button__text" text="#MainMenu_Campaigns_MM_StartCustom" />
							</Button>
							<Button id="CampaignCleanStartBtn" class="selected-campaign__lister__button" onactivate="CampaignChaptersTab.startChapter()">
								<Label class="selected-campaign__lister__button__text" text="#MainMenu_Campaigns_MM_StartVanilla" />
							</Button>
						</Panel>
						<Button id="CampaignBackScreen" class="selected-campaign__lister__button" onactivate="CampaignHome.closeLister()">
							<Label class="selected-campaign__lister__button__text" text="#MainMenu_Campaigns_MM_Back" />
						</Button>
					</Panel>
				</Panel>
				<!-- / LISTER -->

				<!-- CAMPAIGN SETTINGS -->
				<Panel id="CampaignSettingsContainer" class="campaign-settings__container">
					<Panel class="campaign-settings__header">
						<Panel class="flow-down">
							<Label id="CampaignSettingsHeader" class="campaign-settings__header__top" text="[PH] Campaign Settings Header" />
							<Label id="CampaignSettingsSubheader" class="campaign-settings__header__btm" text="[PH] Campaign Settings Subheader" />
						</Panel>
						<Image
							id="CampaignSettingsLogo"
							class="campaign-settings__header__logo"
							src="file://{images}/menu/portal2/full_logo.png"
							scaling="stretch-to-fit-preserve-aspect"
						/>
					</Panel>
					<Panel class="campaign-settings">
						<Panel id="CampaignSettingsBase" class="campaign-settings__left">
							<!-- SETTINGS ROW 1 -->
							<Panel class="row fill-height">
								<Button
									class="campaign-settings__button mr-2"
									onactivate="CampaignSettingsTab.openSettingsSubpage('Presets', 'setting-presets', '#MainMenu_Campaigns_Setup_PanelButton_Presets_Title', '#MainMenu_Campaigns_Setup_PanelButton_Presets_Desc')"
								>
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="#MainMenu_Campaigns_Setup_PanelButton_Presets_Title" />
										<Label class="campaign-settings__button__subtext" text="#MainMenu_Campaigns_Setup_PanelButton_Presets_Desc" />
									</Panel>
								</Button>
								<Button
									class="campaign-settings__button mr-2"
									onactivate="CampaignSettingsTab.openSettingsSubpage('ServerSettings', 'server', '#MainMenu_Campaigns_Setup_PanelButton_Admin_Title', '#MainMenu_Campaigns_Setup_PanelButton_Admin_Desc')"
								>
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="#MainMenu_Campaigns_Setup_PanelButton_Admin_Title" />
										<Label class="campaign-settings__button__subtext" text="#MainMenu_Campaigns_Setup_PanelButton_Admin_Desc" />
									</Panel>
								</Button>
								<Button
									class="campaign-settings__button"
									onactivate="CampaignSettingsTab.openSettingsSubpage('MapSelect', 'map-select', '#MainMenu_Campaigns_Setup_PanelButton_MapSelect_Title', '#MainMenu_Campaigns_Setup_PanelButton_MapSelect_Desc')"
								>
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="#MainMenu_Campaigns_Setup_PanelButton_MapSelect_Title" />
										<Label class="campaign-settings__button__subtext" text="#MainMenu_Campaigns_Setup_PanelButton_MapSelect_Desc" />
									</Panel>
								</Button>
							</Panel>
							<!-- SETTINGS ROW 2 -->
							<Panel class="row mt-2 fill-height">
								<Button
									class="campaign-settings__button mr-2"
									onactivate="CampaignSettingsTab.openSettingsSubpage('GameplayBase', 'gameplay-base', '#MainMenu_Campaigns_Setup_PanelButton_BaseGameplay_Title', '#MainMenu_Campaigns_Setup_PanelButton_BaseGameplay_Desc')"
								>
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="#MainMenu_Campaigns_Setup_PanelButton_BaseGameplay_Title" />
										<Label class="campaign-settings__button__subtext" text="#MainMenu_Campaigns_Setup_PanelButton_BaseGameplay_Desc" />
									</Panel>
								</Button>
								<Button
									class="campaign-settings__button mr-2"
									onactivate="CampaignSettingsTab.openSettingsSubpage('GameplayAddons', 'gameplay-addons', '#MainMenu_Campaigns_Setup_PanelButton_Modifiers_Title', '#MainMenu_Campaigns_Setup_PanelButton_Modifiers_Desc')"
								>
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="#MainMenu_Campaigns_Setup_PanelButton_Modifiers_Title" />
										<Label class="campaign-settings__button__subtext" text="#MainMenu_Campaigns_Setup_PanelButton_Modifiers_Desc" />
									</Panel>
								</Button>
								<Button class="campaign-settings__button transparent">
									<Panel class="horizontal-align-center vertical-align-center flow-down">
										<Image
											class="campaign-settings__button__icon"
											src="file://{images}/cancel.svg"
											scaling="stretch-to-fit-preserve-aspect"
											texturewidth="128"
											textureheight="128"
										/>
										<Label class="campaign-settings__button__text" text="[HC] Dummy Slot" />
									</Panel>
								</Button>
							</Panel>
						</Panel>
						<Panel id="CampaignSettingsHelp" class="campaign-settings__help">
							<Label id="CampaignSettingsHelpText" html="true" text="[PH] Help Text" />
						</Panel>
						<Panel id="CampaignSettingsSubpage" class="campaign-settings__left">
						</Panel>
						<!-- Summary panel -->
						<Panel class="campaign-settings__right">
							<Panel>
								<Image
									id="CampaignSettingsChapterImage"
									class="campaign-settings__chapter-img"
									src="file://{materials}/vgui/new_save_game.vtf"
									scaling="stretch-to-cover-preserve-aspect"
									textureheight="1920"
									texturewidth="1080"
								/>
								<Panel class="campaign-settings__chapter-overlay" />
								<Panel class="m-3 flow-down vertical-align-bottom full-width">
									<Label id="CampaignSettingsChapter" class="campaign-settings__chapter-text" text="[PH] Campaign Chapter" />
									<Label id="CampaignSettingsMap" class="campaign-settings__map-text" text="[PH] Campaign Map" />
								</Panel>
							</Panel>
							<Panel class="campaign-settings__summary">
								<Panel id="CampaignSettingsSummaryPanel" class="campaign-settings__summary__inner">
									<Label class="campaign-settings__summary__text" html="true" text="#MainMenu_Campaigns_Setup_Summary_NoChanges" />
								</Panel>
							</Panel>
							<Button id="CampaignSettingsStart" class="button-mono campaign-settings__start button-mono mt-2 full-width" onactivate="CampaignSettingsTab.finishSettings()">
								<Image
									class="button-mono__icon campaign-settings__start__icon"
									src="file://{images}/cancel.svg"
									scaling="stretch-to-fit-preserve-aspect"
									texturewidth="48"
									textureheight="48"
								/>
								<Label class="button-mono__text campaign-settings__start__text" text="#Action_NewGame_Title" />
							</Button>
						</Panel>
					</Panel>
					<Button class="button-mono mt-2" onactivate="CampaignSettingsTab.stepBack()">
						<Image
							class="button-mono__icon"
							src="file://{images}/cancel.svg"
							scaling="stretch-to-fit-preserve-aspect"
							texturewidth="32"
							textureheight="32"
						/>
						<Label class="button-mono__text" text="#MainMenu_Campaigns_MM_Back" />
					</Button>
				</Panel>
				<!-- / CAMPAIGN SETTINGS -->
			</Panel>
		</Panel>
		<!-- / CAMPAIGN HOME -->
	</Panel>
</root>
