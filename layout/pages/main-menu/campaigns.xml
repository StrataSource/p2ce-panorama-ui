<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/main-menu/campaigns.ts" />
	</scripts>

	<snippets>
		<snippet name="CampaignEntrySnippet">
			<Button class="campaigns__entry">
				<Panel class="campaigns__entry__left">
					<!-- Campaign icon cover -->
					<Image
						id="CampaignCover"
						class="campaigns__entry__cover"
						src="file://{images}/menu/p2ce/news-splash.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>

					<!-- Campaign info; title, description, 'source' -->
					<Panel class="campaigns__entry__details">
						<Image
							id="CampaignLogo"
							class="campaigns__entry__details__logo"
							src="file://{images}/menu/portal2/portal2logo.png"
							scaling="stretch-to-fit-preserve-aspect"
							textureheight="130"
							texturewidth="440"
						/>
						<Label
							id="CampaignTitle"
							class="campaigns__entry__details__title"
							text="[PH] Campaign Title"
						/>
						<Label
							id="CampaignDesc"
							class="campaigns__entry__details__desc"
							text="[PH] Campaign Description"
						/>
					</Panel>
				</Panel>
			</Button>
		</snippet>
		<snippet name="SaveEntrySnippet">
			<Button class="campaigns__entry">
				<Panel class="campaigns__entry__left">
					<!-- Save icon cover -->
					<Image
						id="SaveCover"
						class="saves__entry__cover"
						src="file://{materials}/vgui/no_save_game.vtf"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>

					<!-- Save info; title, description, 'source' -->
					<Panel class="campaigns__entry__details">
						<Label
							id="SaveTitle"
							class="saves__entry__details__title"
							text="[PH] Save Title"
						/>
						<Label
							id="SaveDesc"
							class="saves__entry__details__desc"
							text="[PH] Save Description"
						/>
					</Panel>
				</Panel>
			</Button>
		</snippet>
		<snippet name="ChapterEntrySnippet">
			<Button class="campaigns__entry">
				<Panel class="campaigns__entry__left">
					<!-- Chapter icon cover -->
					<Image
						id="ChapterCover"
						class="chapters__entry__cover"
						src="file://{images}/menu/p2ce/news-splash.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>

					<!-- Chapter info; title, description, 'source' -->
					<Panel class="campaigns__entry__details">
						<Label
							id="ChapterTitle"
							class="chapters__entry__details__title"
							text="[PH] Chapter Title"
						/>
						<Label
							id="ChapterDesc"
							class="chapters__entry__details__desc"
							text="[PH] Chapter Description"
						/>
					</Panel>
				</Panel>
			</Button>
		</snippet>
	</snippets>

	<Panel class="mainmenu__page no-flow" onload="CampaignMgr.init()">
		<Panel class="campaigns">
			<!-- Campaign list -->
			<Panel id="CampaignContainer" class="campaigns__list">

			</Panel>
		</Panel>

		<Panel id="CampaignStartPage" class="selected-campaign">
			<Image
				id="CampaignBackground"
				class="selected-campaign__background"
				src="file://{images}/menu/portal2/background01_widescreen.png"
				scaling="stretch-to-cover-preserve-aspect"
				textureheight="1920"
				texturewidth="1080"
			/>
			<Panel class="selected-campaign__container">
				<Panel class="selected-campaign__controls">
					<Image
						id="CampaignLogo"
						class="selected-campaign__logo"
						src="file://{images}/menu/portal2/portal2logo.png"
						scaling="stretch-to-fit-preserve-aspect"
						textureheight="130"
						texturewidth="440"
					/>

					<Button
						class="selected-campaign__controls__button mb-3"
						onactivate="CampaignNewGameTab.setActive()"
					>
						<Label class="selected-campaign__controls__button__text" text="[HC] New Game" />
					</Button>
					<Button
						id="CampaignLoadLatestBtn"
						class="selected-campaign__controls__button mb-3"
						onactivate="CampaignLoadGameTab.loadLatest()"
					>
						<Label class="selected-campaign__controls__button__text" text="[HC] Continue" />
					</Button>
					<Button
						id="CampaignAllSavesBtn"
						class="selected-campaign__controls__button mb-3"
						onactivate="CampaignLoadGameTab.setActive()"
					>
						<Label class="selected-campaign__controls__button__text" text="[HC] Load Game" />
					</Button>
					<!--
					<Button class="selected-campaign__controls__button">
						<Label class="selected-campaign__controls__button__text" text="[HC] Open in Workshop" />
					</Button>
					-->
					<Button
						id="CampaignStartReturn"
						class="selected-campaign__controls__button vertical-align-bottom"
						onactivate="CampaignStartPage.hide()"
					>
						<Label class="selected-campaign__controls__button__text" text="[HC] Back" />
					</Button>
				</Panel>
				<Panel id="CampaignListerContainer" class="selected-campaign__lister__container">
					<Panel id="CampaignLister" class="selected-campaign__lister">
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
