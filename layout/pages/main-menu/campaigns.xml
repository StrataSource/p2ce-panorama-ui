<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/main-menu/campaigns.ts" />
	</scripts>

	<snippets>
		<snippet name="CampaignEntrySnippet">
			<Button class="addons__item">
				<Panel class="addon-entry__left">
					<!-- Addon icon cover -->
					<Image id="AddonCover" class="addon-entry__cover" textureheight="128" texturewidth="128" />

					<!-- Addon info; title, description, 'source' -->
					<Panel class="addon-entry__title">
						<Label id="CampaignTitle" class="addon-entry__title" />
						<Label id="CampaignAuthors" class="addonpanel__authors" />
					</Panel>
				</Panel>
			</Button>
		</snippet>

		<snippet name="ChapterEntrySnippet">
			<Button class="addons__item">
				<Panel class="addon-entry__left">
					<!-- Addon icon cover -->
					<Image id="ChapterCover" class="addon-entry__cover" textureheight="128" texturewidth="128" />

					<!-- Addon info; title, description, 'source' -->
					<Panel class="addon-entry__title">
						<Label id="ChapterTitle" class="addon-entry__title" />
					</Panel>
				</Panel>
			</Button>
		</snippet>
	</snippets>

	<Panel class="mainmenu__page flow-right" onload="CampaignMgr.init()">
		<Panel class="addons__side_panel flow-down">
			<!-- Top bar -->
			<Panel class="addons__top_buttons__bg">
				<Panel class="addons__top_buttons__container">
					<Button id="ReloadAll" class="addons__top_buttons__reload" onactivate="CampaignMgr.reload()">
						<Image texturewidth="32" textureheight="32" src="file://{images}/refresh.svg" />
					</Button>
				</Panel>
			</Panel>

			<!-- Addon list -->
			<Panel id="CampaignContainer" class="addons__container" />
		</Panel>
		
		<Panel class="addons__side_panel flow-down">
			<Panel id="ChapterContainer" class="addons__container" />
			<Panel id="CampaignStartPage" class="addonpanel__container flow-down" >
				<Image
					id="CampaignActiveLogo"
					src="file://{images}/logo.svg"
					textureheight="130"
					texturewidth="440"
					scaling="stretch-to-fit-x-preserve-aspect"
				/>
				<Label id="CampaignActiveTitle" class="addon-entry__title"/>

				<Button id="CampaignContinue" class="addons__item" onactivate="CampaignStartPage.onContinue()">
					<Label class="addon-entry__title" text="Continue"/>
				</Button>
				<Button id="CampaignNewGame" class="addons__item" onactivate="CampaignStartPage.onNewGame()">
					<Label class="addon-entry__title" text="New Game"/>
				</Button>
				<Button id="CampaignLoadGame" class="addons__item" onactivate="CampaignStartPage.onLoadGame()">
					<Label class="addon-entry__title" text="Load Game"/>
				</Button>
			</Panel>
		</Panel>

	</Panel>
</root>
