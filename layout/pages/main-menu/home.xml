<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/pages/main-menu/home.ts" />
	</scripts>

	<Panel class="mainmenu__page" onload="HomePage.init()">
		<Panel class="home">
			<!-- Resume game button, pause menu only -->
			<Button
				class="home__prompt home__prompt__short PauseMenuModeOnly"
				onactivate="$.DispatchEvent('MainMenuResumeGame');"
			>
				<Image
					src="file://{images}/menu/p2ce/random2.png"
					scaling="stretch-to-cover-preserve-aspect"
					class="home__prompt__image"
				/>
				<Panel class="home__prompt__short__content">
					<Label class="home__heading" text="[HC] Resume Game" />
				</Panel>
			</Button>
			<Panel class="home__spacer__v PauseMenuModeOnly" />
			<!-- Call to action for the player, based on some criteria, main menu only -->
			<Button class="home__prompt MainMenuModeOnly">
				<Image
					src="file://{images}/menu/p2ce/random4.png"
					scaling="stretch-to-cover-preserve-aspect"
					class="home__prompt__image"
				/>
				<Panel class="home__prompt__content">
					<Label class="home__heading" text="[PH] Play" />
					<Label class="home__subheading" text="[PH] 3 New Campaigns Installed!" />
				</Panel>
			</Button>
			<Panel class="home__spacer__v MainMenuModeOnly" />
			<!-- Quick & easy save access -->
			<Panel class="home__horizontal home__horizontal__OnMainMenuOnly">
				<!-- See all saves -->
				<Button class="home__prompt">
					<Image
						src="file://{images}/menu/p2ce/random1.png"
						scaling="stretch-to-cover-preserve-aspect"
						class="home__prompt__image"
					/>
					<Panel class="home__prompt__content">
						<Label
							class="home__heading MainMenuModeOnly"
							text="[HC] All Saves"
						/>
						<Label
							class="home__subheading MainMenuModeOnly"
							text="[HC] Across all campaigns"
						/>
						<Label
							class="home__heading PauseMenuModeOnly"
							text="[HC] Save/Load Game"
						/>
					</Panel>
				</Button>
				<Panel class="home__spacer__h" />
				<!-- Continue latest save -->
				<Button class="home__prompt">
					<Image
						src="file://{images}/menu/p2ce/random3.png"
						scaling="stretch-to-cover-preserve-aspect"
						class="home__prompt__image"
					/>
					<Panel class="home__prompt__content">
						<Label
							class="home__heading MainMenuModeOnly"
							text="[HC] Continue"
						/>
						<Label
							class="home__subheading MainMenuModeOnly"
							text="[PH] Portal 2: The Escape"
						/>
						<Label
							class="home__heading PauseMenuModeOnly"
							text="[HC] Load Last Save"
						/>
					</Panel>
				</Button>
			</Panel>

			<Panel class="home__bottom MainMenuModeOnly">
				<Button class="home__expandable home__expandable__join-btm">
					<Image
						src="file://{images}/menu/p2ce/news-splash.png"
						scaling="stretch-to-cover-preserve-aspect"
						class="home__prompt__image"
					/>
					<Label class="home__expandable__inactive-only home__expandable__big-text" text="[HC] NEWS" />
					<Panel class="home__expandable__content">
						<Label class="home__heading" text="[PH] Clustered Update" />
						<Label
							class="home__subheading home__expandable__active-only"
							text="[PH] Clustered Shading allows Portal 2: Community Edition to use real-time lighting techniques, which greatly enhances the visuals."
						/>
					</Panel>
				</Button>
				<Button class="home__expandable">
					<Image
						src="file://{images}/menu/p2ce/random2.png"
						scaling="stretch-to-cover-preserve-aspect"
						class="home__prompt__image"
					/>
					<Label class="home__expandable__inactive-only home__expandable__big-text" text="[HC] FEATURED" />
					<Panel class="home__expandable__content">
						<Label class="home__heading" text="[PH] My New Epic Campaign" />
						<Label class="home__subheading home__expandable__active-only" text="[PH] by Someone on the Workshop or Something" />
					</Panel>
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
