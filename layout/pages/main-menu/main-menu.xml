<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/pages/main-menu.scss" />
	</styles>

	<scripts>
		<include src="file://{scripts}/pages/main-menu/main-menu.js" />
	</scripts>

	<snippets>
		<snippet name="MainMenuMovieSnippet">
			<Panel>
				<Movie
					id="MainMenuMovie"
					class="mainmenu__movie MainMenuModeOnly"
					src=""
					sound=""
					controls="none"
					repeat="true"
					hittest="false"
				>
				</Movie>
			</Panel>
		</snippet>
	</snippets>

	<ChaosMainMenu
		hittest="false"
		useglobalcontext="false"
		onload="MainMenu.onMainMenuLoaded()"
	>
		<Panel id="MainMenuMovieParent" />
		<Panel id="MainMenuInput">

			<Panel id="MainMenuHeader">
				<Panel class="header-logo">
					<Image
						src="file://{images}/icons/header/logo.svg"
						texturewidth="72"
						scaling="stretch-to-fit-preserve-aspect" />
				</Panel>

				<Panel>
					<Button class="header-button" id="nav-dashboard" group="menu-nav" onactivate="MainMenu.onNavbarSelect('dashboard')">
						<Image
							src="file://{images}/icons/header/play.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
					<Button class="header-button" id="nav-maps" group="menu-nav" onactivate="MainMenu.onNavbarSelect('maps')">
						<Image
							src="file://{images}/icons/header/settings.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
				</Panel>

				<Panel class="align-right">
					<Button class="header-button" id="nav-quit" onactivate="MainMenu.promptQuit()">
						<Image
							src="file://{images}/icons/header/quit.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="MainMenuBody">
			</Panel>

		</Panel>

		<!-- Make sure these are at the bottom to get the z-order right -->
		<ChaosPopupManager id="PopupManager" onpopupsdismissed="" />
		<ContextMenuManager id="ContextMenuManager" />
		<ChaosTooltipManager id="TooltipManager" hittest="false" />

		<!-- Doesn't actually include the notifications, but we use its position to figure out where to show them -->
		<Panel id="SteamNotificationsPlaceholder" hittest="false" />

	</ChaosMainMenu>
</root>
