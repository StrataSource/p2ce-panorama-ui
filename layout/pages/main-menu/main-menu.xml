<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/pages/main-menu.scss" />
	</styles>

	<scripts>
		<include src="file://{scripts}/common/game-ui.js" />
		<include src="file://{scripts}/pages/main-menu.js" />
	</scripts>

	<MainMenu
		hittest="false"
		useglobalcontext="false"
		onload="MainMenu.onMainMenuLoaded()"
	>

		<Panel id="MainMenuInput">

			<Panel id="MainMenuHeader">
				<Panel class="header-logo double-padding">
					<Image
						src="file://{images}/icons/header/logo.svg"
						texturewidth="72"
						scaling="stretch-to-fit-preserve-aspect" />
				</Panel>

				<Panel>
					<Button class="header-button" id="nav-dashboard" group="menu-nav" onactivate="MainMenu.onNavbarSelect('dashboard')">
						<Image
							src="file://{images}/icons/header/play.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
					<Button class="header-button" id="nav-settings" group="menu-nav" onactivate="MainMenu.onNavbarSelect('settings')">
						<Image
							src="file://{images}/icons/header/settings.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
					<Button class="header-button" id="nav-controls-library" group="menu-nav" onactivate="MainMenu.onNavbarSelect('controls-library')">
						<Image
							src="file://{images}/icons/header/settings.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
				</Panel>

				<Panel class="align-right">
					<Button class="header-button double-padding" id="nav-quit" onactivate="MainMenu.promptQuit()">
						<Image
							src="file://{images}/icons/header/quit.svg"
							textureheight="96"
							scaling="stretch-to-fit-preserve-aspect" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="MainMenuBody">
				<ModelPanel
					id="BgModel"
					src="models/test/bg_dot_grid.mdl"
					cubemap="cubemaps/cubemap_menu_model_bg.hdr"
					antialias="true"
					mouse_rotate="false" />
			</Panel>

		</Panel>

	</MainMenu>
</root>
