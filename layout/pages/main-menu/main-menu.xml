<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/common/game-ui.js" />
		<include src="file://{resources}/scripts/pages/main-menu/main-menu.js" />
	</scripts>

	<snippets>
		<snippet name="MainMenuMovieSnippet">
			<Panel>
				<Movie
					id="MainMenuMovie"
					class="mainmenu__movie MainMenuModeOnly"
					src=""
					sound=""
					controls="none"
					repeat="true"
					hittest="false"
				>
				</Movie>
			</Panel>
		</snippet>
	</snippets>

	<ChaosMainMenu
		hittest="false"
		useglobalcontext="false"
		onload="MainMenu.onMainMenuLoaded()"
	>
		<Panel id="MainMenuMovieParent" />
		<Panel id="MainMenuInput">

			<Panel id="MainMenuHeader">
				<Image
					id="MainMenuLogo"
					src="file://{images}/logo.svg"
					textureheight="90"
					texturewidth="234"
					scaling="stretch-to-fit-preserve-aspect" />

				<Panel>
					<Button id="nav-dashboard" group="menu-nav" onactivate="MainMenu.onNavbarSelect('dashboard')">
						<Label text="Dashboard" />
					</Button>
					<Button id="nav-campaigns" group="menu-nav" onactivate="MainMenu.onNavbarSelect('campaigns')">
						<Label text="Campaigns" />
					</Button>
					<Button id="nav-maps" group="menu-nav" onactivate="MainMenu.onNavbarSelect('maps')">
						<Label text="Maps" />
					</Button>
					<Button id="nav-workshop" group="menu-nav" onactivate="MainMenu.onNavbarSelect('workshop')">
						<Label text="Workshop" />
					</Button>
				</Panel>

				<Panel class="align-right">
					<Button id="nav-develop" class="" group="menu-nav" onactivate="MainMenu.onNavbarSelect('develop')">
						<Label text="DEVTEST" />
					</Button>
					<Button id="nav-settings" group="menu-nav" onactivate="MainMenu.onNavbarSelect('settings')">
						<Label text="Settings" />
					</Button>
					<Button id="nav-quit" group="menu-nav" onactivate="MainMenu.promptQuit()">
						<Image src="file://{images}/quit.svg" textureheight="48" scaling="stretch-to-fit-preserve-aspect" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="MainMenuBody">
			</Panel>

		</Panel>

		<!-- Make sure these are at the bottom to get the z-order right -->
		<ChaosPopupManager id="PopupManager" onpopupsdismissed="" />
		<ContextMenuManager id="ContextMenuManager" />
		<ChaosTooltipManager id="TooltipManager" hittest="false" />

		<!-- Doesn't actually include the notifications, but we use its position to figure out where to show them -->
		<Panel id="SteamNotificationsPlaceholder" hittest="false" />

	</ChaosMainMenu>
</root>
