<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/play-menu/main.ts" />
	</scripts>

	<Panel
		class="mainmenu__page no-flow"
		onload="PlayMenu.setPlayMenuLines()"
		onfocus="PlayMenu.onPlayMenuFocused()"
	>
		<Panel class="play-menu__main">
			<Panel class="flow-down full-width">
				<Button
					id="BtnCampaigns"
					class="card card__occupy"
					onactivate="PlayMenu.onCampaignsBtnPressed()"
					tabindex="auto"
					selectionpos="auto"
				>
					<Panel class="full-width fill-height">
						<Image class="card__image" src="file://{images}/menu/p2ce-generic.png" scaling="stretch-to-cover-preserve-aspect" />
						<Panel class="card__status">
							<Label class="card__status__text" text="NEW" />
						</Panel>
					</Panel>
					<Panel class="card__details">
						<Label class="card__details__header" text="#MainMenu_Campaigns_Title" />
						<Label class="card__details__subheader" text="#MainMenu_Campaigns_Tagline" />
					</Panel>
				</Button>
				<Panel class="minor-cards-row mt-3">
					<Button
						class="card card"
						onactivate="PlayMenu.onSoloMapsBtnPressed()"
						tabindex="auto"
						selectionpos="auto"
					>
						<Image
							class="card__image"
							src="file://{images}/menu/banner-multiverse.png"
							scaling="stretch-to-cover-preserve-aspect"
						/>
						<Panel class="card__details">
							<Label class="card__details__header" text="#MainMenu_Campaigns_ModeSel_Solo_Title" />
							<Label class="card__details__subheader" text="#MainMenu_Campaigns_ModeSel_Solo_Tagline" />
						</Panel>
					</Button>
					<Button
						class="card ml-3"
						tabindex="auto"
						selectionpos="auto"
					>
						<Image
							class="card__image"
							src="file://{images}/menu/p2ce/random5.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<Panel class="card__details">
							<Label class="card__details__header" text="#MainMenu_Campaigns_ModeSel_ServerBrowser_Title" />
							<Label class="card__details__subheader" text="#MainMenu_Campaigns_ModeSel_ServerBrowser_Tagline" />
						</Panel>
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
