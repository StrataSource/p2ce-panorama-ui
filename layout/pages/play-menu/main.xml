<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/play-menu/main.ts" />
	</scripts>

	<Panel class="mainmenu__page no-flow">
		<Panel class="play-menu__main">
			<Panel class="flow-down full-width">
				<Button class="play-menu__card" onactivate="PlayMenu.onPlayBtnPressed('campaigns')">
					<Image
						class="play-menu__card__image"
						src="file://{images}/menu/p2ce/random1.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1920"
						texturewidth="1080"
					/>
					<Panel class="play-menu__card__status">
						<Label class="play-menu__card__status__text" text="NEW" />
					</Panel>
					<Panel class="play-menu__card__details">
						<Label class="play-menu__card__details__header" text="[HC] Campaigns" />
						<Label class="play-menu__card__details__subheader" text="[HC] Play specially designed experiences" />
					</Panel>
				</Button>
				<Panel class="play-menu__minor-cards">
					<Button class="play-menu__card play-menu__card" onactivate="PlayMenu.onSoloMapsBtnPressed()">
						<Image
							class="play-menu__card__image"
							src="file://{images}/menu/p2ce/random3.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<Panel class="play-menu__card__details">
							<Label class="play-menu__card__details__header" text="[HC] Solo Maps" />
							<Label class="play-menu__card__details__subheader" text="[HC] Bite-sized experiences" />
						</Panel>
					</Button>
					<Button class="play-menu__card ml-3">
						<Image
							class="play-menu__card__image"
							src="file://{images}/menu/p2ce/random5.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<Panel class="play-menu__card__details">
							<Label class="play-menu__card__details__header" text="[HC] Custom Games" />
							<Label class="play-menu__card__details__subheader" text="[HC] Find or create a perfect game, unrestricted" />
						</Panel>
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
