<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/play-menu/main.ts" />
	</scripts>

	<Panel class="mainmenu__page no-flow" onload="PlayMenu.setPlayMenuLines()">
		<Panel class="play-menu__main">
			<Panel class="flow-down full-width">
				<Button class="card card__occupy" onactivate="PlayMenu.onCampaignsBtnPressed()">
					<Panel class="full-width fill-height">
						<Image
							class="card__image"
							src="file://{images}/menu/p2ce-generic.png"
							scaling="stretch-to-cover-preserve-aspect"
						/>
						<Panel class="card__status">
							<Label class="card__status__text" text="NEW" />
						</Panel>
					</Panel>
					<Panel class="card__details">
						<Label class="card__details__header" text="[HC] Campaigns" />
						<Label class="card__details__subheader" text="[HC] Play specially designed experiences" />
					</Panel>
				</Button>
				<Panel class="minor-cards-row mt-3">
					<Button class="card card" onactivate="PlayMenu.onSoloMapsBtnPressed()">
						<Image
							class="card__image"
							src="file://{images}/menu/banner-multiverse.png"
							scaling="stretch-to-cover-preserve-aspect"
						/>
						<Panel class="card__details">
							<Label class="card__details__header" text="[HC] Solo Maps" />
							<Label class="card__details__subheader" text="[HC] Bite-sized experiences" />
						</Panel>
					</Button>
					<Button class="card ml-3">
						<Image
							class="card__image"
							src="file://{images}/menu/p2ce/random5.png"
							scaling="stretch-to-cover-preserve-aspect"
							textureheight="1920"
							texturewidth="1080"
						/>
						<Panel class="card__details">
							<Label class="card__details__header" text="[HC] Custom Games" />
							<Label class="card__details__subheader" text="[HC] Find or create a perfect game, unrestricted" />
						</Panel>
					</Button>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
