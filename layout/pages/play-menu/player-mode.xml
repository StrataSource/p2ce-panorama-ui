<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
	</styles>
	<scripts>
		<include src="file://{scripts}/common/dev.ts" />
		<include src="file://{scripts}/pages/play-menu/main.ts" />
	</scripts>

	<Panel class="mainmenu__page no-flow" onload="PlayMenu.setPlayerMenuLines()">
		<Panel class="play-menu__main">
			<Panel class="flow-right full-width full-height">
				<Button class="card fill-width mr-3" onactivate="PlayMenu.onSinglePlayerBtnPressed()">
					<Image
						class="card__image"
						src="file://{images}/menu/vertical-banner-solo.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1839"
						texturewidth="1002"
					/>
					<Panel class="card__details card__details__no-bg">
						<Label class="card__details__header card__details__header__dark" text="[HC] Singleplayer" />
					</Panel>
				</Button>
				<Button class="card fill-width" onactivate="PlayMenu.onMultiPlayerBtnPressed()">
					<Image
						class="card__image"
						src="file://{images}/menu/vertical-banner-mp.png"
						scaling="stretch-to-cover-preserve-aspect"
						textureheight="1839"
						texturewidth="1002"
					/>
					<Panel class="card__details card__details__no-bg">
						<Label class="card__details__header card__details__header__dark" text="[HC] Multiplayer" />
					</Panel>
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
