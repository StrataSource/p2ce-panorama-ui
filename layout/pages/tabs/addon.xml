<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/pages/tabs/addon.scss" />
	</styles>

	<scripts>
		<include src="file://{scripts}/common/game-ui.js" />
		<include src="file://{scripts}/pages/tabs/addon.js" />
	</scripts>

	<Panel class="root pre-trans" useglobalcontext="false">
		<BaseBlurTarget id="background-blur" blurrects="addon-chapters">
			<Image id="background" src="none" scaling="stretch-to-cover-preserve-aspect" />
		</BaseBlurTarget>
		<Panel id="root">
			<Panel id="addon-chapters">
			</Panel>
			<Panel id="addon-info">
				<Panel>
					<Label id="chapter-title" text="Title" />
					<Label id="chapter-description" text="I cooke de pasta" />
				</Panel>
				<TextButton onactivate="AddonMenu.playChapter()" text="Play" />
			</Panel>
		</Panel>
	</Panel>
</root>
