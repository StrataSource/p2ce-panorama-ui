<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/pages/tabs/dashboard.scss" />
	</styles>

	<scripts>
		<include src="file://{scripts}/common/game-ui.js" />
		<include src="file://{scripts}/components/addon-library.js" />
		<include src="file://{scripts}/pages/tabs/dashboard.js" />
	</scripts>

	<snippets>
		<snippet name="category">
			<Panel class="category">
				<Panel class="title">
					<Label class="h1" text="{s:title}" />
				</Panel>
				<Panel class="content">
				</Panel>
			</Panel>
		</snippet>
		<snippet name="card">
			<Panel class="card pre-trans">
				<Image class="cover" id="cover" src="{s:cover}" scaling="stretch-to-fill-preserve-aspect" />
				<!-- <Image class="logo" src="{s:logo}" scaling="stretch-to-fill-preserve-aspect" /> -->
				<Panel>
					<Label class="title" text="{s:title}" />
					<Label class="author" text="{s:author}" />
					<Label class="description" text="{s:description}" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<Panel class="root" onload="DashboardMenu.onDashboardLoaded()" useglobalcontext="false">
		<Panel class="body">
		</Panel>

		<Panel class="sidebar">
			<Panel>
				<AvatarImage id="UserIcon" />
				<Label id="UserName" text="Username" class="gap-5" />
				<TextButton text="Workshop" onactivate="DashboardMenu.openWorkshop()" class="row gap-20 secondary" />
				<TextButton text="My Profile" onactivate="DashboardMenu.openProfile()" class="row gap-20 secondary" />
			</Panel>
		</Panel>

	</Panel>
</root>
