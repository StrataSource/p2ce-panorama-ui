{
	"name": "p2ce-panorama",
	"version": "1.0.1",
	"description": "P2:CE's default Panorama UI.",
	"author": "P2:CE & Momentum Team",
	"license": "MIT",

	"scripts": {
		"watch": "tsc --watch",
		"build": "tsc",
		"lint": "eslint && prettier . --check",
		"fix": "eslint --fix && prettier . --write",
		"postinstall": "husky install",
		"pre-commit": "lint-staged"
	},

	"dependencies": {},
	"devDependencies": {
		"typescript": "^5.1.6",
		"pano-typed": "github:koerismo/pano-typed",

		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.5.0",
		"@typescript-eslint/parser": "^6.2.0",
		"@typescript-eslint/eslint-plugin": "^6.2.0",

		"husky": "^8.0.1",
		"lint-staged": "^12.4.1",

		"@prettier/plugin-xml": "^2.1.0",
		"prettier": "^2.6.2"
	},

	"lint-staged": {
		"**/*.{ts,xml,scss,css,md}": "prettier . --write",
		"scripts/**/*.ts": [
			"eslint --fix",
			"tsc"
		]
	}
}
