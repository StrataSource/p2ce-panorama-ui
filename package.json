{
	"name": "p2ce-panorama",
	"version": "2.0.0-alpha",
	"description": "P2:CE's default Panorama UI.",
	"author": "P2:CE & Momentum Team",
	"license": "MIT",
	"scripts": {
		"watch": "tsc --watch",
		"build": "tsc",
		"lint": "eslint && prettier . --check",
		"fix": "eslint --fix && prettier . --write",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@prettier/plugin-xml": "^2.2.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"husky": "^8.0.3",
		"lint-staged": "^12.5.0",
		"pano-typed": "github:StrataSource/pano-typed#feat/workshop-api-tmp",
		"prettier": "^2.8.8",
		"typescript": "^5.5.4"
	},
	"lint-staged": {
		"**/*.{ts,xml,scss,css,md}": "prettier . --write",
		"scripts/**/*.ts": [
			"eslint --fix"
		]
	}
}
