{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ES2022",
		"moduleResolution": "Node",
		"rootDir": "scripts/",
		"outDir": ".jsbuild/",

		"alwaysStrict": true,
		"isolatedModules": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"allowJs": true,
		"strict": true,

		"lib": ["ES2020"],
		"typeRoots": ["./node_modules/pano-typed"],
		"types": ["p2ce"]
	},
	"include": [
		"scripts/"
	],
	"exclude": [
		"*.d.ts"
	]
}